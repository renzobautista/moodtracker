<h1>Home page</h1>

<h3>Sign up</h3>
<%= form_for @user, url: users_path do |f| %>
  <%= label_tag :username %>
  <%= f.text_field :username %>

  <%= label_tag :password %>
  <%= f.password_field :password %>

  <%= label_tag :password_confirmation %>
  <%= f.password_field :password_confirmation %>
    
  <%= f.submit "Create" %>
<% end %>